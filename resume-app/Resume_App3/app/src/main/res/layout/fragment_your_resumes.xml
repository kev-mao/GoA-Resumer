<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".main.YourResumesFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_create_resume"
        style="@style/ResumeApp.FloatingButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/button_create_resume"
        app:icon="@drawable/edit"
        app:iconPadding="8dp"
        app:iconSize="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="100dp"
        tools:listitem="@layout/item_resume_builder_recycler_container" />

</RelativeLayout>